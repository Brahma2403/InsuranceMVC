<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            background-image: url(Images/pic3.jpg); /* Replace 'your-image.jpg' with the path to your image */
            background-size: cover; /* Makes the image cover the entire viewport */
            background-repeat: no-repeat; /* Ensures the image doesn't repeat */
            background-position: center; /* Centers the image */
        }
    </style>
</head>
<body>
    <table height="100%" width="100%">
        <tr>
            <td width="100%">
                @Html.Partial("HomeHeader")
            </td>
        </tr>
        <tr>
            <td width="100%">
                <table width="100%" height="auto">
                    <tr>
                        <td>
                            <div>
                                @RenderBody()
                            </div>
                        </td>
                        <td>
                            <form action="https://localhost:7286/Home/Login" method="post">
                                <table>
                                    <tr>
                                        <td>User Name</td>
                                        <td><input type="text" name="txUser" /></td>
                                    </tr>
                                    <tr>
                                        <td>Password</td>
                                        <td><input type="password" name="txPsw" /></td>
                                    </tr>
                                    <tr>
                                        <td>New User? <a href="">Register</a></td>
                                        <td><button type="submit">Login</button></td>
                                    </tr>
                                </table>
                                <input type="hidden" name="role" value="User" />
                            </form>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td width="100%">
                @Html.Partial("Footer")
            </td>
        </tr>
    </table>
</body>
</html>